{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es6", "es2015", "dom", "es2020.string"],
		"declaration": true,
		"outDir": "lib",
		"rootDir": "src",
		"strict": true,
		"types": ["node"],
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"rules": {
		"max-line-length": [true, 120]
	}
}
